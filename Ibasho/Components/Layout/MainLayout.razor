@*
    メインレイアウト
*@
@inherits LayoutComponentBase

<div id="screen-app" class="h-full grid grid-rows-[auto,1fr,auto] overflow-hidden">
    <header class="text-center py-4 text-xl font-bold text-sky-500 border-b bg-white/80 backdrop-blur-sm">
        <NavLink href=Home.Path>
            <span class="cursor-pointer">Ibasho</span>
        </NavLink>
    </header>
    <div class="min-h-0 overflow-y-auto">
        <div class="container mx-auto max-w-2xl">
            @* コンテンツエリア *@
            <main class="pb-4">
                @Body
            </main>
        </div>
    </div>

    @* フッターナビゲーション *@
    <nav class="bg-white border-t border-gray-200 shadow-t">
        <div class="flex justify-around max-w-2xl mx-auto">
            <NavLink href=@Home.Path class=@($"flex flex-col items-center justify-center w-full pt-3 pb-2 {(_relativePath == "home" ? "text-sky-500" : "text-gray-500")}")>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                <span class="text-xs mt-1">ホーム</span>
            </NavLink>
            <NavLink href=@Search.Path class=@($"flex flex-col items-center justify-center w-full pt-3 pb-2 {(_relativePath == "search" ? "text-sky-500" : "text-gray-500")}")>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                <span class="text-xs mt-1">検索</span>
            </NavLink>
            <NavLink href=@Notifications.Path class=@($"flex flex-col items-center justify-center w-full pt-3 pb-2 {(_relativePath == "notifications" ? "text-sky-500" : "text-gray-500")}")>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                <span class="text-xs mt-1">通知</span>
            </NavLink>
            <NavLink href=@($"{Profile.Path}/{_displayUserId}") class=@($"flex flex-col items-center justify-center w-full pt-3 pb-2 {(_relativePath == "profile" ? "text-sky-500" : "text-gray-500")}")>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                <span class="text-xs mt-1">プロフィール</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    // 現在のパス
    private string _relativePath = "";
    // 表示用ユーザID
    private string _displayUserId = "";
    
    /// <summary>
    /// 初期表示時
    /// </summary>
    protected async override Task OnInitializedAsync()
    {
        _relativePath = NavManager.ToBaseRelativePath(NavManager.Uri);
        string? userId = await UserAuthHelper.GetUserIdAsync(AuthStateProvider);
        _displayUserId = await GetDisplayUserIdUseCase.ExecuteAsync(userId ?? "");
    }
}