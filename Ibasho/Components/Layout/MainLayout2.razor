@inherits LayoutComponentBase

<div id="screen-app">
    <div class="container mx-auto max-w-2xl">
        @* コンテンツエリア *@
        <main class="pb-24">
            @Body
        </main>

        @* フッターナビゲーション *@
        <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-t">
            <div class="flex justify-around max-w-2xl mx-auto">
                <button id="nav-home" class="flex flex-col items-center justify-center w-full pt-3 pb-2 text-sky-500"
                        onclick="event.preventDefault(); location.href = '/home';">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                    <span class="text-xs mt-1">ホーム</span>
                </button>
                <button id="nav-search" class="flex flex-col items-center justify-center w-full pt-3 pb-2 text-gray-500"
                        onclick="event.preventDefault(); location.href = '/search';">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    <span class="text-xs mt-1">検索</span>
                </button>
                <button id="nav-notifications" class="flex flex-col items-center justify-center w-full pt-3 pb-2 text-gray-500"
                        onclick="event.preventDefault(); location.href = '/notifications';">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                    <span class="text-xs mt-1">通知</span>
                </button>
                <button id="nav-profile" class="flex flex-col items-center justify-center w-full pt-3 pb-2 text-gray-500"
                        onclick="event.preventDefault(); location.href = '/profile';">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                    <span class="text-xs mt-1">プロフィール</span>
                </button>
            </div>
        </nav>
    </div>
</div>
