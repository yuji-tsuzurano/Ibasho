@*
    プロフィール画面
*@
@page "/profile/{DisplayUserId}"
@using Ibasho.Application.UseCases.Profiles
@using Ibasho.Application.DTOs
@using Ibasho.Application.Services.Auth
@using Ibasho.Domain.Entities
@inject GetUserProfileUseCase GetUserProfileUseCase
@inject GetUserPostsUseCase GetUserPostsUseCase
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthStateProvider

<PageTitle>Ibasho - プロフィール</PageTitle>

<div class="space-y-4 px-4">
    @* プロフィール *@
    <div class="mt-4 bg-white rounded-xl shadow-sm overflow-hidden">
        @if (ProfileInfo != null)
        {
            <div>
                <img class="h-32 w-full object-cover" src="@ProfileInfo.BannerUrl" alt="Profile banner">
            </div>
            <div class="p-4">
                <div class="flex items-end -mt-16">
                    <img class="h-24 w-24 rounded-full border-4 border-white" src="@ProfileInfo.AvatarUrl" alt="My Avatar">
                    <NavLink href=@($"{Edit.Path}/{DisplayUserId}") class="ml-auto px-4 py-2 text-sm font-semibold border border-gray-300 rounded-full hover:bg-gray-100">
                        プロフィールを編集
                    </NavLink>
                </div>
                <div class="mt-4">
                    <h2 class="text-xl font-bold">@ProfileInfo.DisplayName</h2>
                    <p class="text-sm text-gray-500">@("@" + ProfileInfo.DisplayUserId)</p>
                    <p class="mt-2 text-gray-700">@ProfileInfo.Bio</p>
                </div>
                <div class="flex mt-4 space-x-4 text-sm text-gray-600">
                    <p class="cursor-pointer" onclick="showContent('follow-list')"><span class="font-bold text-gray-800">@ProfileInfo.FollowingCount</span> フォロー中</p>
                    <p class="cursor-pointer" onclick="showContent('follow-list')"><span class="font-bold text-gray-800">@ProfileInfo.FollowerCount</span> フォロワー</p>
                </div>
            </div>
            <div class="border-t border-gray-200">
                <nav class="flex">
                    <a href="#" id="profile-tab-posts" onclick="event.preventDefault(); switchProfileTab('posts')" class="flex-1 text-center py-3 font-medium text-sky-500 border-b-2 border-sky-500">投稿</a>
                    <a href="#" id="profile-tab-likes" onclick="event.preventDefault(); switchProfileTab('likes')" class="flex-1 text-center py-3 font-medium text-gray-500 hover:bg-gray-100">いいね</a>
                </nav>
            </div>
        }
    </div>
    @* 投稿一覧 *@
    <div id="profile-content-posts" class="space-y-4">
        @foreach (PostListItemDto myPostInfo in MyPostInfos)
        {
            <div class="p-4 bg-white border border-gray-200 rounded-xl shadow-sm">
                <div class="flex items-start space-x-3">
                    <img class="w-12 h-12 rounded-full cursor-pointer" src="@myPostInfo.UserAvatarUrl" alt="User Avatar">
                    <div class="flex-1">
                        <div class="flex items-center space-x-2">
                            <span class="font-bold">@myPostInfo.UserDisplayName</span>
                            <span class="text-sm text-gray-500">@("@" + myPostInfo.DisplayUserId) · @myPostInfo.CreatedAt</span>
                        </div>
                        <p class="mt-1">@myPostInfo.Content </p>
                    </div>
                </div>
            </div>
        }
    </div>

    @* いいね一覧 *@
    <div id="profile-content-likes" class="hidden space-y-4">
        <div class="p-4 bg-white border border-gray-200 rounded-xl shadow-sm">
            <p class="text-sm text-gray-500 mb-2">あなたが「いいね」しました</p>
            <div class="flex items-start space-x-3">
                <img class="w-12 h-12 rounded-full cursor-pointer" onclick="showContent('user-profile')" src="https://placehold.co/100x100/E2E8F0/4A5568?text=User" alt="User Avatar">
                <div class="flex-1">
                    <div class="flex items-center space-x-2">
                        <span class="font-bold">ユーザー名１</span>
                        <span class="text-sm text-gray-500">@("@user1") · 5分前</span>
                    </div>
                    <p class="mt-1">Tailwind CSSを使ってSNSのUIを作るの、楽しい！ライトブルーがいい感じ。</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // パス
    public static string Path = "/profile";

    // 表示用ユーザId
    [Parameter]
    public string DisplayUserId { get; set; } = "";

    // プロフィール情報
    private ProfileInfoDto? ProfileInfo;

    // プロフィール情報
    private IReadOnlyList<PostListItemDto> MyPostInfos = [];

    /// <summary>
    /// 初期表示時
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        var userId = await UserAuthHelper.GetUserIdAsync(AuthStateProvider);
        if (!string.IsNullOrEmpty(userId))
        {
            ProfileInfo = await GetUserProfileUseCase.ExecuteAsync(userId, userId);
            MyPostInfos = await GetUserPostsUseCase.ExecuteAsync(userId, userId);
        }
        StateHasChanged();
    }
}