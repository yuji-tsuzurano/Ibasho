@*
    プロフィール画面
*@
@page "/profile/{DisplayUserId}"
@using Ibasho.Application.UseCases.Profiles
@using Ibasho.Application.UseCases.Users
@using Ibasho.Application.DTOs
@using Ibasho.Application.Services.Auth
@using Ibasho.Components.Partials.Profile
@inject GetUserProfileUseCase GetUserProfileUseCase
@inject GetUserIdUseCase GetUserIdUseCase
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthStateProvider

<PageTitle>Ibasho - プロフィール</PageTitle>

<div class="space-y-4 px-4">
    <div class="mt-4 bg-white rounded-xl shadow-sm overflow-hidden">
        @* プロフィール *@
        @if (ProfileInfo != null)
        {
            <div>
                <img class="h-32 w-full object-cover" src="@ProfileInfo.BannerUrl" alt="Profile banner">
            </div>
            <div class="p-4">
                <div class="flex items-end -mt-16">
                    <img class="h-24 w-24 rounded-full border-4 border-white" src="@ProfileInfo.AvatarUrl" alt="My Avatar">
                    <NavLink href=@($"{Edit.Path}/{DisplayUserId}") class="ml-auto px-4 py-2 text-sm font-semibold border border-gray-300 rounded-full hover:bg-gray-100">
                        プロフィールを編集
                    </NavLink>
                </div>
                <div class="mt-4">
                    <h2 class="text-xl font-bold">@ProfileInfo.DisplayName</h2>
                    <p class="text-sm text-gray-500">@("@" + ProfileInfo.DisplayUserId)</p>
                    <p class="mt-2 text-gray-700">@ProfileInfo.Bio</p>
                </div>
                <div class="flex mt-4 space-x-4 text-sm text-gray-600">
                    <p class="cursor-pointer" onclick="showContent('follow-list')"><span class="font-bold text-gray-800">@ProfileInfo.FollowingCount</span> フォロー中</p>
                    <p class="cursor-pointer" onclick="showContent('follow-list')"><span class="font-bold text-gray-800">@ProfileInfo.FollowerCount</span> フォロワー</p>
                </div>
            </div>
        }
        @* 投稿一覧 *@
        <PostList DisplayUserId="@DisplayUserId" />
    </div>
</div>

@code {
    // パス
    public static string Path = "/profile";

    // 表示用ユーザId
    [Parameter] public string DisplayUserId { get; set; } = "";

    // プロフィール情報
    private ProfileInfoDto? ProfileInfo;

    /// <summary>
    /// 初期表示時
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        string? myUserId = await UserAuthHelper.GetUserIdAsync(AuthStateProvider);
        if (string.IsNullOrEmpty(myUserId))
        {
            return;
        }
        string? targetUserId = await GetUserIdUseCase.ExecuteAsync(DisplayUserId);
        if (string.IsNullOrEmpty(targetUserId))
        {
            return;
        }
        ProfileInfo = await GetUserProfileUseCase.ExecuteAsync(targetUserId, myUserId);
    }
}