@* 
    投稿情報コンポーネント
*@
<div class="p-4 bg-white border border-gray-200 rounded-xl shadow-sm">
    <div class="flex items-start space-x-3">
        <NavLink href="@($"/profile/{Post.DisplayUserId}")">
            <img class="w-12 h-12 rounded-full cursor-pointer" src="@Post.UserAvatarUrl" alt="User Avatar">
        </NavLink>
        <div class="flex-1">
            <div class="flex items-center space-x-2">
                <span class="font-bold cursor-pointer">@Post.UserDisplayName</span>
                <span class="text-sm text-gray-500">@($"@{Post.DisplayUserId}·{Post.CreatedAt.ToString("HH:mm")}")</span>
            </div>
            <p class="mt-1">@Post.Content</p>
            <div class="flex items-center justify-between mt-4 text-gray-500">
                <NavLink class="flex items-center space-x-1 hover:text-sky-500" href="@($"/reply/{Post.PostId}")">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                    <span class="text-sm">@Post.ReplyCount</span>
                </NavLink>
                <PostLikeCountButton PostId="@Post.PostId" IsLiked="@Post.IsLikedByCurrentUser" LikeCount="@Post.LikeCount" />
            </div>
        </div>
    </div>
</div>

@code {
    // 投稿情報
    [Parameter]
    public PostListItemDto Post { get; set; } = default!;
}
