@*
    投稿一覧コンポーネント
*@
@rendermode InteractiveServer

@* 投稿/返信フォーム *@
<div class="p-4 bg-white border border-gray-200 rounded-xl shadow-sm mb-4">
    <EditForm Model="this" OnValidSubmit="OnSubmitAsync">
        <InputTextArea @bind-Value="Content" class="w-full p-2 border-none rounded-lg focus:ring-0 resize-none" rows="3" placeholder="@Placeholder" />
        <ValidationMessage For="@(() => Content)" />
        <div class="flex justify-end mt-2">
            <button type="submit" class="px-5 py-2 text-sm font-semibold text-white bg-sky-500 rounded-full hover:bg-sky-600 transition-colors duration-300" disabled="@IsPosting">
                @if (IsPosting) 
                { 
                    <span>@(IsReplyMode ? "返信中..." : "投稿中...")</span>
                } 
                else
                { 
                    <span>@(IsReplyMode ? "返信する" : "投稿する")</span>
                }
            </button>
        </div>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="text-red-500 text-sm mt-2">@ErrorMessage</div>
        }
    </EditForm>
</div>
@* 投稿一覧 *@
<div class="space-y-3 mt-4">
    @if (Posts == null || Posts.Count == 0)
    {
        <div class="text-gray-500 text-center py-8">@EmptyMessage</div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var post in Posts)
            {
                <PostItem Post="post" />
            }
        </div>
    }
</div>

@code {
    // モード: "Home" or "Reply"
    [Parameter] public string Mode { get; set; } = "Home";

    // 返信モード時の親投稿ID
    [Parameter] public long ParentPostId { get; set; } = 0;

    // 投稿一覧
    [Parameter] public List<PostListItemDto> Posts { get; set; } = new();

    // 投稿内容
    public string Content { get; set; } = string.Empty;

    // 投稿中
    public bool IsPosting { get; set; } = false;

    // エラーメッセージ
    public string ErrorMessage { get; set; } = "";

    // 返信モード判定
    private bool IsReplyMode => Mode == "Reply";

    // プレースホルダー
    private string Placeholder => IsReplyMode ? "返信を投稿" : "いまどうしてる？";

    // 空メッセージ
    private string EmptyMessage => IsReplyMode ? "返信はまだありません" : "投稿はまだありません";

    /// <summary>
    /// 投稿一覧取得
    /// </summary>
    public async Task GetPostsAsync()
    {
        string? userId = await UserAuthHelper.GetUserIdAsync(AuthStateProvider);
        if (string.IsNullOrEmpty(userId))
        {
            Posts = new List<PostListItemDto>();
            return;
        }

        if (IsReplyMode)
        {
            // 返信一覧を取得
            var (_, replies) = await GetThreadUseCase.ExecuteAsync(ParentPostId, userId);
            Posts = replies.ToList();
        }
        else
        {
            // タイムラインを取得
            Posts = (await GetHomeTimelineUseCase.ExecuteAsync(userId)).ToList();
        }
        StateHasChanged();
    }

    /// <summary>
    /// 投稿/返信
    /// </summary>
    private async Task OnSubmitAsync()
    {
        ErrorMessage = string.Empty;
        if (string.IsNullOrWhiteSpace(Content))
        {
            ErrorMessage = IsReplyMode ? "返信内容を入力してください。" : "投稿内容を入力してください。";
            return;
        }
        IsPosting = true;
        try
        {
            string? userId = await UserAuthHelper.GetUserIdAsync(AuthStateProvider);
            if (string.IsNullOrEmpty(userId))
            {
                ErrorMessage = "認証情報が取得できません。";
                return;
            }

            if (IsReplyMode)
            {
                // 返信作成
                await CreateReplyUseCase.ExecuteAsync(userId, ParentPostId, Content);
            }
            else
            {
                // 新規投稿作成
                await CreatePostUseCase.ExecuteAsync(userId, Content);
            }

            Content = string.Empty;
            await GetPostsAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = (IsReplyMode ? "返信に失敗しました: " : "投稿に失敗しました: ") + ex.Message;
        }
        finally
        {
            IsPosting = false;
            StateHasChanged();
        }
    }
}
